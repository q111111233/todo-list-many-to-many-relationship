<h2>Categories:</h2>
@if (@Model.Count == 0)
{
  <p>No categories have been added yet!</p>
}
else
  {
    <ul>
      @foreach (var category in Model)
      {
        <li><a href="/categories/@category.GetId()">@category.GetName()</a></li>
      }
    </ul>
  }

<h4><a href="/categories/new">Add a new category</a></h4>
<h4><a href="/">Return home</a></h4>
